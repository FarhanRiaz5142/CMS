<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="16dp">

        <!-- Back Arrow and Screen Label -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/rounded_corner_background"
                android:contentDescription="@string/back_button_desc"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/screenLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Worker"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="56dp" />
        </LinearLayout>

        <!-- Profile Image -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/account"
            android:layout_gravity="center"
        android:scaleType="centerCrop"
        app:civ_border_width="2dp" />

        <!-- Worker Name -->
        <TextView
            android:id="@+id/workerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- Worker Position -->
        <TextView
            android:id="@+id/workerPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp" />

        <!-- Specification -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="22dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/feedback"
                android:contentDescription="Specification Icon"
               android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/specificationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specification: "
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/specificationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="22dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/email"
            android:contentDescription="Email Icon"
            android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/emailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Experience -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="22dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/complete"
            android:contentDescription="Experience Icon"
            android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/experienceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Phone -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="22dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/phone"
            android:contentDescription="Phone Icon"
            android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/phoneText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Edit Button -->
        <Button
            android:id="@+id/editButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/ButtonBlue"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"/>

        <!-- Logout Button -->
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:backgroundTint="@color/ButtonWhite"
            android:textColor="@color/black" />
    </LinearLayout>

